/*------------------------------------*
   $CONTACT FORM
*------------------------------------*/

.form-wrap
  padding 1em 0 2.0em

.contact-form
  display block
  overflow hidden
  clearfx()

  .no-js &
    display none

  div.error
    position absolute
    right 25px
    top -10px
    background-color #C02932
    color #fff
    padding 5px 10px
    font-size 12px
    display block
    white-space nowrap

    &:after
      content ''
      display block
      width 0
      height 0
      border 3px solid transparent
      border-top-color #C02932
      border-right-color #C02932
      position absolute
      top 100%
      right 0

.contact-form__item
  width 100%
  border none
  resize none
  border 1px solid #ccc
  -webkit-appearance none
  outline none
  position relative
  background-color #f9f9f9
  clearfx()

.contact-form__message
  box-sizing border-box
  font-size 15px
  font-weight 600
  color $base-color
  padding 26px 30px 23px 30px
  height 70px
  margin-bottom 0
  transition height .2s ease-out

.contact-form__input
  height 60px
  box-sizing border-box
  font-size 15px
  font-weight 600
  color $base-color
  margin-bottom 18px
  padding 26px 30px 23px 30px

.contact-form__checkbox
  margin-bottom 18px
  display block
  font-size 15px

.contact-form__checkbox span
  margin-left 5px

.contact-form__shift,
.fancy-select .trigger
  clearfx()
  width 100%
  border 1px solid #ccc
  -webkit-appearance none
  outline none
  position relative
  background-color #f9f9f9
  display block
  color #A9A9A9
  height 60px
  line-height 60px
  padding 0 30px
  font-size 15px
  font-weight 600
  border-radius 0
  cursor pointer

  &:hover,
  &.open
    background-color #f0f0f0

  &:after
    content ''
    display block
    width 0
    height 0
    border 6px solid transparent
    border-top-color #aaa
    position absolute
    top 26px
    right 30px

.fancy-select
  position relative

  .options
    margin 0
    padding 0
    position absolute
    width 100%
    background-color $base-color
    color #fff
    border 1px solid darken($base-color, 10%)
    bottom 50%
    list-style none
    display block
    border-radius 2px
    visibility hidden
    opacity 0
    transition opacity 300ms ease-out, bottom 300ms ease-out, visibility 300ms ease-out

    .selected
      display none

    li[data-raw-value="Ingen"]
      display none

    li
      line-height 2.5
      padding 0em 1em
      font-size 14px

      &:hover
        background-color $link-color
        cursor pointer

    &.open
      visibility visible
      opacity 1
      bottom 110%
      transition opacity 300ms ease-out, bottom 300ms ease-out

.contact-form__submit
  background-color $base-color
  -webkit-appearance none
  border none
  color #fff
  padding 0em 2em
  height 59px
  text-transform uppercase
  font-weight 600
  font-size 14px
  letter-spacing 1px
  transition background-color .25s ease
  outline none
  width 100%

  &:hover,
  &:focus
    background-color $link-color

  .night-mode &
    background-color $link-color

  &:disabled
    opacity .5

    &:hover,
    &:focus
      background-color $base-color

    .night-mode &
      background-color $link-color

.form__block-left
  height 0
  transform translateX(-100%)
  transition height .2s ease-out, transform .5s .5s ease

.form__block-right
  height 0
  transform translateX(100%)
  transition height .2s ease-out, transform .5s .5s ease

.form__block-submit
  height 0
  opacity 0
  transition height .5s 1s ease, opacity .5s 1s ease-out

.contact-form.expanded
  .contact-form__message
    height 200px
    margin-bottom 16px

  .form__block-left
    height 155px
    transform translateX(0)

  .form__block-right
    height 175px
    transform translateX(0)


.asterisk
  position relative
  float right
  color #C02932
  margin-top -56px
  margin-right 20px
  font-size 14px
  z-index 10


/**
 * Messages
 */
.form-messages
  margin-bottom 20px

.message-success
  padding 1.5em
  border 1px solid #A9D1A4
  color #547451
  background-color #D9F6D6

  h2
    margin 0
    font-size 1.5em

  p
    font-size 1rem
    margin 0

  a
    color #547451
    text-decoration underline
